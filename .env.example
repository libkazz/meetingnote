# n8n API settings (client-side variables should use VITE_ prefix)
# Primary transcription endpoint (replaces VITE_N8N_API_URL)
VITE_N8N_TRANSCRIBE_URL=
VITE_N8N_SUMMARY_URL=
VITE_N8N_MERGE_AUDIO_URL=
VITE_N8N_API_KEY=
VITE_REQUEST_TIMEOUT_MS=60000
VITE_UPLOAD_FIELD_NAME=audio

# Optional: use Vite dev proxy to avoid CORS during development
# If true, client will call /api/n8n and Vite will proxy to VITE_N8N_TRANSCRIBE_URL
VITE_USE_PROXY=false

# Server-side examples (if you add a backend later)
# N8N_TRANSCRIBE_URL=
# N8N_API_KEY=
# APP_PORT=3000
# CORS_ORIGIN=http://localhost:3000
# UPLOAD_MAX_SIZE_MB=25

# Notes:
# - Copy to .env and fill values for local dev.
# - VITE_N8N_TRANSCRIBE_URL example: https://n8n.example.com/webhook/your-workflow
# - Keep API keys out of commits and logs.
